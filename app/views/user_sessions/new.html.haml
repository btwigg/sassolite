= form_for :user_session, :url => user_sessions_path do |f|
  = f.label :Login
  %br
  = f.text_field :login
  %br
  
  = f.label :Password
  %br
  = f.password_field :password
  %br
  
  = f.label :"Remember me?"
  %br
  = f.check_box :remember_me
  %br
  
  
  = f.submit
  
= link_to "Password Reset", new_password_reset_path